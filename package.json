{
  "name": "convoflow",
  "version": "1.0.0",
  "description": "ConvoFlow - A secure chat application with video calling and end-to-end encryption",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:server": "jest tests/ --testEnvironment=node",
    "test:client": "cd client && npm test",
    "test:integration": "jest tests/integration.test.js --testEnvironment=node",
    "test:e2e": "playwright test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint server/ --ext .js --fix",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "npm run lint:server -- --fix && cd client && npm run lint -- --fix",
    "docker:build": "docker build -t encrypted-chat-backend .",
    "docker:build-client": "docker build -f Dockerfile.client -t encrypted-chat-frontend .",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "deploy:staging": "DEPLOYMENT_TYPE=kubernetes ENVIRONMENT=staging ./scripts/deploy.sh staging",
    "deploy:production": "DEPLOYMENT_TYPE=kubernetes ENVIRONMENT=production ./scripts/deploy.sh production",
    "deploy:local": "DEPLOYMENT_TYPE=docker-compose ./scripts/deploy.sh development",
    "health-check": "curl -f http://localhost/health || exit 1"
  },
  "keywords": [
    "chat",
    "messaging",
    "encryption",
    "socket.io",
    "react"
  ],
  "author": "James",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
  "cookie-parser": "^1.4.6",
    "pg": "^8.16.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
